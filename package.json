    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "commitlint": "^17.8.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "4.5"
  },
  "dependencies": {
    "@segment/isodate": "^1.0.3",
    "cli-color": "^2.0.1",
